{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "lib": ["es5", "es2015", "dom", "scripthost"],
    "typeRoots": ["node", "node_modules/@types"]
  },
  "compileOnSave": true,
  "exclude": [],
  "include": ["./src/*.ts"]
}
